<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".DifficultChooseActivity">

    <Button
        android:id="@+id/button_easy_difficultity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_drawable_borderless"
        android:foreground="@drawable/pixel_foreground_16_5"
        android:textColor="@color/colorAccent_2"
        app:layout_constraintBottom_toTopOf="@+id/button_medium_difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_medium_difficulty"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="@drawable/button_drawable_borderless"
        android:foreground="@drawable/pixel_foreground_16_5"
        android:textColor="@color/colorAccent_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_hard_difficulty"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_drawable_borderless"
        android:foreground="@drawable/pixel_foreground_16_5"
        android:textColor="@color/colorAccent_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_medium_difficulty" />


</androidx.constraintlayout.widget.ConstraintLayout>